        border-color: #333;
        cursor: pointer;
    }

    .message{
        color:rgb(16 255 0);
        margin-bottom: 10px;
      }

    .topnav button:hover {
        background-color: #ddd;
        color: black;
    }

    .topnav button.active {
        background-color: #05333c;
        color: white;
    }

